#!/bin/bash
# Pre-commit hook to run checks matching GitHub CI
#
# To install this hook, run: ./scripts/setup-hooks.sh
# Or manually: cp hooks/pre-commit .git/hooks/pre-commit && chmod +x .git/hooks/pre-commit

set -e

echo "Running pre-commit checks..."

# Get the repository root
REPO_ROOT="$(git rev-parse --show-toplevel)"

# =============================================================================
# RUST CORE LIBRARY CHECKS
# =============================================================================

# 1. Format check
echo "ðŸ” Checking Rust code formatting..."
if ! cargo fmt --check; then
    echo "âŒ Format check failed. Run 'cargo fmt' to fix."
    exit 1
fi
echo "âœ… Rust format check passed"

# 2. Clippy lints
echo "ðŸ” Running clippy..."
if ! cargo clippy --all-targets --all-features -- -D warnings; then
    echo "âŒ Clippy found issues. Fix them before committing."
    exit 1
fi
echo "âœ… Clippy passed"

# 3. Build check
echo "ðŸ” Checking build..."
if ! cargo check --all-features; then
    echo "âŒ Build check failed."
    exit 1
fi
echo "âœ… Build check passed"

# 4. Dependency check
echo "ðŸ” Checking dependencies with cargo-deny..."
if ! command -v cargo-deny &> /dev/null; then
    echo "âš ï¸  cargo-deny not installed. Run: cargo install cargo-deny"
    echo "âš ï¸  Skipping dependency check..."
else
    if ! cargo deny check; then
        echo "âŒ Dependency check failed."
        exit 1
    fi
    echo "âœ… Dependency check passed"
fi

# 5. Run library tests
echo "ðŸ” Running library tests..."
if ! cargo test --lib --all-features; then
    echo "âŒ Library tests failed."
    exit 1
fi
echo "âœ… Library tests passed"

# =============================================================================
# PYTHON BINDINGS CHECKS
# =============================================================================

if [ -d "$REPO_ROOT/llmkit-python" ]; then
    echo ""
    echo "ðŸ Checking Python bindings..."

    pushd "$REPO_ROOT/llmkit-python" > /dev/null

    # Rust format check for Python bindings
    echo "ðŸ” Checking Python bindings Rust formatting..."
    if ! cargo fmt --check; then
        echo "âŒ Python bindings Rust format check failed. Run 'cargo fmt' in llmkit-python/."
        exit 1
    fi
    echo "âœ… Python bindings Rust format passed"

    # Clippy for Python bindings
    echo "ðŸ” Running clippy on Python bindings..."
    if ! cargo clippy --all-targets -- -D warnings; then
        echo "âŒ Python bindings clippy failed."
        exit 1
    fi
    echo "âœ… Python bindings clippy passed"

    popd > /dev/null
fi

# =============================================================================
# NODE.JS BINDINGS CHECKS
# =============================================================================

if [ -d "$REPO_ROOT/llmkit-node" ]; then
    echo ""
    echo "ðŸ“¦ Checking Node.js bindings..."

    pushd "$REPO_ROOT/llmkit-node" > /dev/null

    # Rust format check for Node bindings
    echo "ðŸ” Checking Node.js bindings Rust formatting..."
    if ! cargo fmt --check; then
        echo "âŒ Node.js bindings Rust format check failed. Run 'cargo fmt' in llmkit-node/."
        exit 1
    fi
    echo "âœ… Node.js bindings Rust format passed"

    # Clippy for Node bindings
    echo "ðŸ” Running clippy on Node.js bindings..."
    if ! cargo clippy --all-targets -- -D warnings; then
        echo "âŒ Node.js bindings clippy failed."
        exit 1
    fi
    echo "âœ… Node.js bindings clippy passed"

    # TypeScript type check (if pnpm and node_modules exist)
    if command -v pnpm &> /dev/null && [ -d "node_modules" ]; then
        echo "ðŸ” Running TypeScript type check..."
        if ! pnpm exec tsc --noEmit 2>/dev/null; then
            echo "âš ï¸  TypeScript type check failed or not configured."
        else
            echo "âœ… TypeScript type check passed"
        fi
    fi

    popd > /dev/null
fi

echo ""
echo "âœ… All pre-commit checks passed!"
